pipeline {
    agent {
        kubernetes {
            yamlFile 'pod.yaml'
        }
    }
    options {
        ansiColor('xterm')
    }
    stages {
        stage('Create Terraform infrastructure') {
            steps {
                container('terraform') {
                  sh "pwd"
                  sh "ls -l"
                  dir("folder-inner"){
                    sh "pwd"
                    sh "ls -l"
                    sh "cat config.txt"
                    sh "terraform --version"
                  }
                }
            }
        }
    }
}
